
import processing.core.*;

public class Button extends PApplet {
	void setup() {
		size(500, 500);
		frameRate(60);
	}

	void draw() {
	}

	void mouseDragged() {
		background(0);
		stroke(255, 255, 0);
		strokeWeight(8);
		fill(255, 0, 0);
		ellipse(mouseX, mouseY, 80, 80);
	}

	void mouseMoved() {
		background(0);
		stroke(255);
		strokeWeight(4);
		fill(0, 255, 0);
		ellipse(mouseX, mouseY, 80, 80);
	}

}
