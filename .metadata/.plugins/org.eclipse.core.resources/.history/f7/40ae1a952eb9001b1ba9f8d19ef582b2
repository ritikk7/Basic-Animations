
import processing.core.*;

public class RainbowStrip {
	float x, y, shade;

	void settings() {
		size(500, 500);
	}

	void draw() {
		background(0);
		x = 10;
		y = 200;
		colorMode(HSB, 360, 250, 250);
		shade = 0;

		while (x < 490) {
			stroke(shade, 250, 250);
			line(x, y, x, y + 100);
			x++;
			shade += 0.75;
		}
	}

}
